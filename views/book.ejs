<%- include('parts/header') %>
    <%- include('parts/navbar') %>
        <main class="product-page m-first-section">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-5 responsive-img text-center">
                        <img src="/<%= book.fileName %>" alt="<%= book.title %>" class="w-100 h-100">
                    </div>
                    <div class="col-5 pt-3">
                        <div class="product-details h-100 position-relative">
                            <div class="product-top d-flex justify-content-between mb-3">
                                <h1 class="book-title h5">
                                    <%= book.title %>
                                        </h6>
                                        <ul class="list-unstyled stars d-flex">
                                            <% for(let i = 0; i < 5; i++) { %>
                                                <li class="<%= book.totalRating > i? " active ": false %>">
                                                    <% if(Number.isInteger(book.totalRating)) { %>
                                                        <i class="fas fa-star"></i>
                                                        <% } else { %>
                                                            <i class="fas fa-star-half-alt"></i>
                                                            <% } %>
                                                </li>
                                                <% } %>
                                        </ul>
                            </div>
                            <div class="details-item d-flex align-items-center mb-2"><i class="fas fa-clipboard-list mr-3" style="font-size: 28px;"></i><span>category:  <%= book.category %></span></div>
                            <div class="details-item d-flex align-items-center mb-2"><i class="fas fa-user-edit mr-3" style="font-size: 18px;"></i>author:
                                <%= book.author %>
                            </div>
                            <div class="details-item d-flex align-items-center mb-2"><i class="fas fa-vote-yea mr-3" style="font-size: 18px;"></i>year:
                                <%= book.year %>
                            </div>
                            <h6 class="h3 d-flex align-items-center mt-5 product-price">
                                <%= book.price - ((book.price * book.discount) / 100) %>$
                                    <% if(book.discount !== null) { %>
                                        <span class="last-product-price">Insted of <%= book.price %>$</span>
                                        <% } %>
                            </h6>
                            <div class="quantity-controls d-flex mt-4">
                                <input type="hidden" id="availQuantity" value="<%= book.amount %>">
                                <span class="mr-2 quantity-minus">-</span>
                                <span class="ml-2 quantity" id="productQuantity">1</span>
                                <span class="ml-3 quantity-plus">+</span>
                            </div>
                            <input type="hidden" value="<%= book.id %>" id="bookId">
                            <form class="addcart w-100" action="/cart" method="GET">
                                <button type="submit" class="btn big-btn shadow-none">
                                <i class="fas fa-shopping-cart"></i>
                                Add
                            </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <main class="m-section">
            <div class="container">
                <div class="section-title text-capitalize pb-3">about the book
                </div>
                <p class="product-desc">
                    <%= book.description %>
                </p>
            </div>
        </main>

        <%- include('parts/scripts') %>
            <script src="/js/products.js"></script>
            </body>

            </html>